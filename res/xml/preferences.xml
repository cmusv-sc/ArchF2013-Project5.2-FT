<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="Sensors"
        android:key="sensors">
        
        
        <MultiSelectListPreference 
            android:key="sensor_array"
            android:title="Sensors to utilize"
            android:summary="Define what sensors should record user data" 
            android:entries="@array/sensor_array"
            android:entryValues="@array/sensor_array"
            android:defaultValue="@array/sensor_value_array"
            android:persistent="true"
        />    
            
    </PreferenceCategory>

    
</PreferenceScreen>